  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "mikan motion",
      "type": "node",
      "program": "${workspaceFolder}/src/cli.ts",
      "args": ["motion"],
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--import-map",
        "./import_map.json",
        "--config",
        "./tsconfig.json",
        "--inspect",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    }
  ]
}
